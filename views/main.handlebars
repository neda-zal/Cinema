<div class="page-bg"></div>

  <div class="animation-wrapper">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
  </div>

<!-- navigation -->
<nav class="navbar navbar-default bg-light border border-dark navbar-static-top" style="margin: 14px;">
  <div class="container-fluid">
    <div class="navbar-header" style="margin-top: 12px; margin-bottom: 12px;">
      <form class="form-inline" name="buttons" method="post">
        <input class="form-control border border-dark text-center" style="width: 100px;"
               name="button" type="button" value="Home" onclick="openPage('/panel')"/>
      </form>
    </div>
  </div>
</nav>

<div>
  <h1 class="align-middle neon" style="font-weight: bold; margin: 30px;">Edit users</h1>
</div>

<div class="container">
  <table class="table" style="position: relative;
  text-align: center; background-color: white; font-size: 15px;">
    <thead>
      <tr>
        <th scope="col-1">ID</th>
        <th scope="col-2">Name</th>
        <th scope="col-2">Surname</th>
        <th scope="col-2">Username</th>
        <th scope="col-2">Birthdate</th>
        <th scope="col-2">Address</th>
        <th scope="col-1">Edit</th>
      </tr>
    </thead>
      <tbody>
          {{#each data}}
              <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.name}}</td>
                  <td>{{this.surname}}</td>
                  <td>{{this.username}}</td>
                  <td>{{this.birth}}</td>
                  <td>{{this.address}}</td>
                  <td><input type="button" class="form-control" value="Edit" data-id="{{this.id}}"
                    onclick="openPage('/edit/{{this.id}}');"></td>
              </tr>
          {{/each}}
      </tbody>
  </table>
</div>
