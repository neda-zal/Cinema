<div>
  <h1 class="align-middle neon" style="font-weight: bold; margin: 30px;">Edit user</h1>
</div>

<div class="bg-light border border-dark table-responsive p-3"
style="width: 40%; position: absolute; left: 30%;">
    <h4>Please fill out form below:</h4>
    <div>
      <form id="registration" method="post" class="needs-validation" novalidate>
          <div class="container">
            <div class="row">
              <div class="col-md-4">
                <label for="first_name">First Name:</label>
              </div>
              <div class="col-md-8">
                <input class="form-control border border-dark " type="text" id="first_name" name="first_name"
                value="{{data.name}}" required>
                <div id="invalid-feedback" style="font-size: 12px;">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <label for="last_name">Last Name:</label>
              </div>
              <div class="col-md-8">
                <input class="form-control border border-dark" type="text" id="last_name" name="last_name"
                required value="{{data.surname}}">
                <div id="invalid-feedback1" style="font-size: 12px;">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <label for="username">Username:</label>
              </div>
              <div class="col-md-8">
                <input class="form-control border border-dark" type="text" id="username" name="username"
                required value="{{data.username}}">
                <div id="invalid-feedback2" style="font-size: 12px;">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <label for="password">Password:</label>
              </div>
              <div class="col-md-8">
                <input class="form-control border border-dark" type="password" id="password" name="password" required>
                <div id="invalid-feedback3" style="font-size: 12px;">
                </div>
                </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <label for="date">Birthdate:</label>
              </div>
              <div class="col-md-8">
                <input class="form-control border border-dark" type="date" id="date" name="date"
                required value="{{data.birth}}">
                <div id="invalid-feedback4" style="font-size: 12px;">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <label for="address">Address:</label>
              </div>
              <div class="col-md-8">
                <input class="form-control border border-dark" type="text" id="address" name="address"
                required value="{{data.address}}">
                <div id="invalid-feedback5" style="font-size: 12px;">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12" id="submitted">
                <button type="submit" value="Create My Account" class="btn"
                onclick="validate(); return false;">Update details</button>
              </div>
            </div>
          </div>
      </form>
    </div>
</div>

